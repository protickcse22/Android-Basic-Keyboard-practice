<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="number_row_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">.1</item>
        <item name="android:background">@drawable/rounded_button_with_shadow</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="three_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_weight">.15</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/rounded_button_with_shadow_cross_shift_what</item>
    </style>


</resources>
